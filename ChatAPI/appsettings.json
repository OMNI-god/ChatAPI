{
  "JWT": {
    "Issuer": "https://localhost:7038",
    "Audience": [
      "https://localhost:7038",
      "https://localhost:5173",
      "http://localhost:5173",
      "http://140.245.252.36:5001"
    ],
    "AccessTokenExpirationInMinutes": 300,
    "RefreshTokenExpirationInDays": 30
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.CorrelationId"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithCorrelationId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/API-log-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://localhost:5173",
      "http://140.245.252.36:5001",
      "http://140.245.252.36:5002"
    ]
  }
}
